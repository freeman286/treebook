<%= devise_error_messages! %>

<h2 class="page-header">Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, class: "well" }) do |f| %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div class="form-actions"><%= f.submit "Send me reset password instructions", class: "btn" %></div>
<% end %>

<%= render "devise/shared/links" %>
