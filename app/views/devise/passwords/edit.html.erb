<%= devise_error_messages! %>

<h2 class="page-header">Change your password</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, class: "well" }) do |f| %>
  <%= f.hidden_field :reset_password_token %>

  <div><%= f.label :password, "New password" %><br />
  <%= f.password_field :password, :autofocus => true %></div>

  <div><%= f.label :password_confirmation, "Confirm new password" %><br />
  <%= f.password_field :password_confirmation %></div>

  <div class="form-actions"><%= f.submit "Change my password", class: "btn" %></div>
<% end %>

<%= render "devise/shared/links" %>
