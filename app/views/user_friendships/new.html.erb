<%if @friend%>
	<h1 class="page-header"><%= @friend.full_name %></h1>
	<p>Do you really want to friend <%= @friend.full_name %>?</p>
	<%= form_for @user_friendship, method: :post, :html => {class: "well" } do |form| %>
		<div class="form form-actions">
	    	<%= form.hidden_field :friend_id, value: @friend.profile_name %>
     		<%= submit_tag "Yes, Add Friend", class: 'btn' %>
      		<%= link_to "Cancel", profile_path(@friend), class: 'btn' %>
		</div>
	<%end%>
<%end%>