<%= devise_error_messages! %>

<h2 class="page-header">Resend confirmation instructions</h2>

<%= form_for(resource, :as => resource_name, :url => confirmation_path(resource_name), :html => { :method => :post, class: "well" }) do |f| %>
  

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div class="form-actions"><%= f.submit "Resend confirmation instructions", class: "btn" %></div>
<% end %>

<%= render "devise/shared/links" %>
